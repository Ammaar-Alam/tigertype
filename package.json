{
  "name": "tigertype",
  "version": "1.0.0",
  "description": "Princeton-themed typing platform for speed typing practice and competitions",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js --ignore client/",
    "client": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install:all": "npm install && cd client && npm install",
    "build": "npm run client:build",
    "test": "jest --detectOpenHandles --verbose",
    "test:server": "jest --detectOpenHandles --verbose --testPathPattern=server",
    "test:client": "cd client && npm test",
    "test:client:progress": "cd client && npm run test:progress",
    "test:all": "npm run test:server && npm run test:client",
    "test:all:pretty": "npm run test:server && npm run test:client:progress"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "socket.io": "^4.7.2",
    "pg": "^8.11.3",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "mock-socket": "^9.3.1",
    "socket.io-client": "^4.7.2",
    "pg-mem": "^2.8.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "TigerType Team",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["./server/tests/setup.js"],
    "testPathIgnorePatterns": ["/node_modules/", "/client/"],
    "verbose": true,
    "collectCoverageFrom": [
      "server/**/*.js",
      "!server/tests/**/*.js"
    ]
  }
}